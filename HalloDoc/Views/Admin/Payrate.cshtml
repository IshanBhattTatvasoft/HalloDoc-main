                        <tr>
                            <td class="text-center">HouseCalls</td>
                            <td>
                                <input type="text" asp-for="houseCalls" class="form-control" name="num" id="hc" value="@Model.houseCalls" />
                            </td>
                            <td class="w-25 text-end">
                                <button type="button" id="Edit3" class="editbutton me-2 btn btn-outline-info">
                                    Edit
                                </button>
                                <button type="submit" id="Save3" class="savebutton me-2 btn btn-outline-info">
                                    Save
                                </button>
                                <button type="button" id="Cancel3" class="cancelbutton me-2 btn btn-outline-info">
                                    Cancel
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(".savebutton").hide();
    $(".cancelbutton").hide();
    $(".editbutton").click(function () {
        $(".savebutton").show();
        $(".cancelbutton").show();
        $(".editbutton").hide();
    });

    $(".cancelbutton").click(function () {
        $(".savebutton").hide();
        $(".cancelbutton").hide();
        $(".editbutton").show();
    });
</script>