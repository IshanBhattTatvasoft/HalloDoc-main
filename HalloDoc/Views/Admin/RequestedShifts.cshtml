@model HalloDoc.DataLayer.ViewModels.RequestedShiftsViewModel

@{
    ViewData["Title"] = "Requested Shifts";
}

@section Styles{
    <link href="~/css/scheduling.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    
    <partial name="_ValidationScriptsPartial" />
}
<partial name="Toast" />

<body class="bg-light">
    <div class="bg-light" style="overflow: hidden;">
        <partial name="HeaderFooter" model="@Model.adminNavbarModel"/>
        <div class="container">
            <div class="row">
                <div style="top: 42px; position: relative;" class="col">
                    <a class="float-end text-info mx-auto" id="backdesign" asp-controller="Admin" asp-action="Scheduling" style="text-decoration: none;margin-right: 243px;border: 1px solid; border-radius: 7px; height: 40px;display: flex;align-items: center;justify-content: center;padding: 4px 4px 4px 1px;width: 69px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                             class="bi bi-chevron-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                        </svg>
                        Back
                    </a>
                </div>

                <div class="row">
                    <div class="col mt-2">
                        <p class="h5 text-muted fw-bold" id="heading-one">
                            Requested Shifts
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-white mt-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="dropdown text-light ms-5 mt-3" style="border: 1px solid rgb(211, 210, 210);padding: 8px;border-radius: 8px;padding-left: 12px;">
                        <i class="fa-solid fa-magnifying-glass me-2" style="color: #9fa6b2; position: absolute !important; margin-left: -4px; margin-top: 11px;"></i>
                        <select class="btn dropdown-toggle text-secondary w-100" id="select-region" style="text-align: start;" onchange="filter(this.value)">
                            <option value="-1" selected class="text-muted">All Regions</option>
                            @foreach (var item in Model.allRegions)
                            {
                                <option value="@item.RegionId" class="bg-white text-muted">@item.Name</option>
                            }
                        </select>
                    </div>

                    <div class="d-flex justify-content-between align-items-end">
                        <button type="button" class="shadow btn btn-success me-5 mt-3">View Current Month Shifts</button>
                        <button type="button" class="shadow btn btn-success text-white me-5 mt-3" onclick="approveShifts()">Approve Selected</button>
                        <button type="button" class="shadow btn btn-danger text-white me-5 mt-3" onclick="deleteShifts()">Delete Selected</button>
                    </div>
                </div>

                <div>
                    <div class="table-responsive mt-4 ms-3 me-3 myTable" id="RequestedShiftsPartialView"></div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
        crossorigin="anonymous"></script>

<script>
    window.onload = () => {
        var region = document.getElementById("select-region").value;

        $.ajax({
            url: '/Admin/RequestedShiftsFilteredData',
            type: 'POST',
            data: { regionId: region },
            success: function (response) {
                console.log("hello");
                $("#RequestedShiftsPartialView").html(response);
            },
            error: function (error) {
                alert("An error occurred");
            }
        });
    }

    function filter(region)
    {

        $.ajax({
            url: '/Admin/RequestedShiftsFilteredData',
            type: 'POST',
            data: { regionId: region },
            success: function (response) {
                $("#RequestedShiftsPartialView").html(response);
            },
            error: function (error) {
                console.log(error);
                alert("An error occurred");
            }
        });
    }

    function oncheck()
    {
        var check = document.getElementById('checkall').checked;
        if (check) {
            var len = document.getElementsByClassName('checkboxes');
            for (var i = 0; i < len.length; i++) {
                len[i].checked = true;
            }
        } else {
            var len = document.getElementsByClassName('checkboxes');
            for (var i = 0; i < len.length; i++) {
                len[i].checked = false;
            }
        }
    }

    function approveShifts()
    {
        var checkedboxes = document.querySelectorAll('.checkboxes:checked');
        console.log(checkedboxes.length);
        var shiftDetailId = [];
        
        if(checkedboxes.length == 0){
            alert("Please select a shift");
            return;
        }

        for(var i=0;i<checkedboxes.length;i++){
            var currentCheckbox = checkedboxes[i];
            var closestEntry = currentCheckbox.closest('tr');
            var shiftDetailIdInput = closestEntry.querySelector('.shift-detail-id');
            console.log(shiftDetailIdInput.value);
            if (shiftDetailIdInput) {
                shiftDetailId.push(shiftDetailIdInput.value);
            }
            else {
                console.error('RequestWiseFileId input not found in table row for checkbox:', currentCheckbox);
            }
        }

        var idString = shiftDetailId.join(',');

        $.ajax({
            url: '/Admin/ApproveSelectedShifts',
            type: 'POST',
            data: { shiftDetailIdString: idString },
            success: function(response){
                console.log("hellooooo");
            },
            error: function(error){
                alert("An error occurred");
            }
        });
    }

    function deleteShifts()
    {
        var checkedboxes = document.querySelectorAll('.checkboxes:checked');
        console.log(checkedboxes.length);
        var shiftDetailId = [];

        if (checkedboxes.length == 0) {
            alert("Please select a shift");
            return;
        }

        for (var i = 0; i < checkedboxes.length; i++) {
            var currentCheckbox = checkedboxes[i];
            var closestEntry = currentCheckbox.closest('tr');
            var shiftDetailIdInput = closestEntry.querySelector('.shift-detail-id');
            console.log(shiftDetailIdInput.value);
            if (shiftDetailIdInput) {
                shiftDetailId.push(shiftDetailIdInput.value);
            }
            else {
                console.error('RequestWiseFileId input not found in table row for checkbox:', currentCheckbox);
            }
        }

        var idString = shiftDetailId.join(',');

        $.ajax({
            url: '/Admin/DeleteSelectedShifts',
            type: 'POST',
            data: { shiftDetailIdString: idString },
            success: function (response) {
                console.log("hellllooo");
            },
            error: function (error) {
                alert("An error occurred");
            }
        });
    }
</script>

