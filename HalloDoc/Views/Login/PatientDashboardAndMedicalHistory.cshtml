                            <tr>
                                <td>@item.CreatedDate</td>
                                <td>@item.Status</td>
                                <td><a style="border:1px solid #00ccff;padding:6px;margin:auto;  color:#00ccff;border-radius:5px; text-decoration: none;" asp-controller="Login" asp-action="PatientDashboardViewDocuments">(@item.Count) Documents</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>



            <!-- Accordion part (for mobile view) -->
            <div class="bg-white mt-0">
                <div class="d-flex justify-content-end d-sm-none mx-3 py-3">
