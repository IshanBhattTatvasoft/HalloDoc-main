@model HalloDoc.DataLayer.ViewModels.PatientProfileView 
@{
    ViewData["Title"] = "PatientProfile";
    Layout = "_Layout";
}
<Partial name="_Notification" />

@section Styles{
    <link href="~/css/patient-profile.css" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="~/js/bootstrap.bundle.min.js"></script>
}

<div style="overflow: hidden;">
    <nav class="d-flex justify-content-between Nav border-bottom border-dark-subtle w-100 sticky-top bg-light">
        <div class="d-flex gap-1 align-items-center">
            <button class="navbar-toggler d-block d-sm-none ms-1"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseExample"
                    aria-expanded="false"
                    aria-controls="collapseExample">
                <span class="navbar-toggler-icon"></span>
                <i class="bi bi-list" style="color: #27b5d2; border: 1px solid #ccf4fc;"></i>
            </button>

            <img src="~/images/logo1.png"
                 class="Image ps-1 pt-1 ms-5"
                 alt="Patient"
                 style="height: 80px;" />
        </div>
        <div class="d-flex align-items-center gap-1 flex-wrap">
            <p class="fw-light p-0 text-muted fw-semibold me-4 d-none d-sm-inline-block" style="margin-top: 20px !important;">welcome <strong> @Model.Username</strong></p>
            <a class="btn btn-outline-info d-none d-sm-flex mt-1" asp-controller="Login" asp-action="Logout" style="margin-right:100px;">Logout</a>
            <a class="btn btn-outline-info d-inline-block d-sm-none flex-shrink-1 flex-sm-shrink-0" style="margin-right: 50px;"
               asp-controller="Login" asp-action="PatientSite">
                <i class="bi bi-box-arrow-right"></i>
            </a>
            <div class="moon-flex d-none d-sm-flex">
                <button class="change-theme">
