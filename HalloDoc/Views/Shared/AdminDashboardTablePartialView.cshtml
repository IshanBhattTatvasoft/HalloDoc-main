                                            </div>
                                        </a>
                                    }

                                    @if (Model.status == "New" || Model.status == "Pending" || Model.status == "Active" || Model.status == "Conclude" || Model.status == "ToClose" || Model.status == "Unpaid")
                                    {
                                        <a class="dropdown-item mb-1 hover-dropdown-item px-1" asp-action="ViewCase" asp-controller="Admin" asp-route-id="@item.RequestId">
                                            <div class="action-item">
                                                <img src="~/images/search-file.png" alt="" class="action-img me-2" style="height: 22px; width: 28px;"><span>View Case</span>
                                            </div>
                                        </a>
                                    }

                                    @if ((Model.status == "Pending" && Model.an.roleName == "Provider") || Model.status == "ToClose")
                                    {
                                        <a class="dropdown-item mb-1 hover-dropdown-item px-1" asp-controller="Admin" asp-action="ViewUploads" asp-route-id="@item.RequestId" onclick="viewUploadsData('@item.RequestId', '@item.RequestClient.FirstName', '@item.RequestClient.LastName')">
