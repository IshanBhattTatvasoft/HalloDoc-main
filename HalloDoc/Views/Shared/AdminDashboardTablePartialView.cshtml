                                                <img src="~/images/x-mark.png" alt="" class="action-img me-1" style="height: 20px; width: 20px;"><span class="text-dark">Cancel Case</span>
                                            </div>
                                        </a>

                                    }

                                    @if (Model.status == "Pending" && Model.an.roleName == "Provider")
                                    {
                                        <a type="button" href="#" data-bs-toggle="modal" data-bs-target="#SendAgreementModal" class="dropdown-item mb-1 hover-dropdown-item text-dark px-1" onclick="sendAgreementData('@item.RequestId', '@item.RequestTypeId', '@item.RequestClient.Email', '@item.RequestClient.PhoneNumber')">
                                            <div class="action-item">
                                                <img src="~/images/send-agreement-image.svg" alt="" class="action-img me-1" style="height: 20px; width: 20px;"><span>Send Agreement</span>
                                            </div>
                                        </a>
                                    }

                                    @if (Model.an.roleName == "Provider" && Model.status == "Conclude")
                                    {
                                        <a class="dropdown-item mb-1 hover-dropdown-item px-1" asp-action="ConcludeCare" asp-controller="Provider" asp-route-id="@item.RequestId">
                                            <div class="action-item">
