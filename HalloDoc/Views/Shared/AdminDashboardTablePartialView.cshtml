@model HalloDoc.DataLayer.ViewModels.AdminDashboardTableView

@*Message Offcanvas*@
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasSide" aria-labelledby="offcanvasSideLabel">
    <div class="offcanvas-header bg-info text-light">
        <h4 class="text-white" id="offcanvasSideLabel">Chat</h4>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body" id="ChatContainer">
        <div class="Chat-Container">
            <ul id="messagesList" class="chat-messages d-flex flex-column" style="height:80vh;">
            </ul>
            <form id="messageForm">
                <div class="d-flex gap-2 position-absolute w-100 bottom-0 mb-2">
                    <div class="form-floating" style="width:310px;">
                        <textarea class="form-control" placeholder="Type A Message" id="messageInput"></textarea>
                        <label for="messageInput">Type A Message</label>
                    </div>
                    <button class="btn btn-info text-white" onclick="ViewMessage(); return false;"><i class="bi bi-send m-2"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

<form asp-action="DownloadSpecificExcel" asp-controller="Admin" method="post">
    @Html.HiddenFor(m => m.status)
    @for (int i = 0; i < Model.regions.Count; i++)
    {
        @Html.HiddenFor(m => m.regions[i].Name)
        @Html.HiddenFor(m => m.regions[i].RegionId)
    }
    @for (int i = 0; i < Model.requests.Count; i++)
    {
        @Html.HiddenFor(m => m.requests[i].FirstName)
        @Html.HiddenFor(m => m.requests[i].LastName)
        @Html.HiddenFor(m => m.requests[i].PhoneNumber)
        @Html.HiddenFor(m => m.requests[i].RequestTypeId)
        @Html.HiddenFor(m => m.requests[i].RequestClient.FirstName)
        @Html.HiddenFor(m => m.requests[i].RequestClient.LastName)
        @Html.HiddenFor(m => m.requests[i].RequestClient.PhoneNumber)
        @Html.HiddenFor(m => m.requests[i].RequestClient.Street)
        @Html.HiddenFor(m => m.requests[i].RequestClient.Address)
        @Html.HiddenFor(m => m.requests[i].RequestClient.ZipCode)
        @Html.HiddenFor(m => m.requests[i].RequestClient.State)
        @Html.HiddenFor(m => m.requests[i].RequestClient.City)
        @Html.HiddenFor(m => m.requests[i].CreatedDate)
        @Html.HiddenFor(m => m.requests[i].RequestClient.IntYear)
        @Html.HiddenFor(m => m.requests[i].RequestClient.StrMonth)
        @Html.HiddenFor(m => m.requests[i].RequestClient.IntDate)
        @Html.HiddenFor(m => m.requests[i].Physician.FirstName)
        for (int j = 0; j < Model.requests[i].RequestStatusLogs.ToList().Count; ++j)
        {
            @Html.HiddenFor(m => m.requests[i].RequestStatusLogs.ToList()[j].Status)
            @Html.HiddenFor(m => m.requests[i].RequestStatusLogs.ToList()[j].CreatedDate)
            @Html.HiddenFor(m => m.requests[i].RequestStatusLogs.ToList()[j].Notes)

        }
    }
    <button type="submit" class="d-none" id="submit-button-for-excel">Submit</button>
</form>

