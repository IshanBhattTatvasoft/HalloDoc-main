@model HalloDoc.DataLayer.ViewModels.BlockedHistoryViewModel

<table class="table mt-0">
    <thead class="table-secondary">
        <tr>
            <th class="text-muted" style="width: 250px !important">Patient Name</th>
            <th class="text-muted" style="width: 250px !important">Phone Number</th>
            <th class="text-muted" style="width: 300px !important">Email</th>
            <th class="text-muted" style="width: 250px !important">Created Date<i class="bi bi-arrow-down"></i></th>
            <th class="text-muted">Notes</th>
            <th class="text-muted text-end">Is Active</th>
            <th class="text-muted text-end">Action</th>
        </tr>
    </thead>

    @foreach(var item in Model.allData)
    {
        @if(item.singleBlockRequest.IsActive[0] == true)
        {
            <tr>
                <td>@item.patientName</td>
                <td>@item.singleBlockRequest.PhoneNumber</td>
                <td>@item.singleBlockRequest.Email</td>
                <td>@item.singleBlockRequest.CreatedDate</td>
                <td>@item.singleBlockRequest.Reason</td>
                <td>
                    <input type="checkbox" @(item.singleBlockRequest.IsActive[0] == true ? "checked" : "") disabled value="@item.singleBlockRequest.IsActive" />
                </td>
                <td>
                    <a class="btn btn-outline-info text-info" asp-action="UnblockTheRequest" asp-controller="Admin" asp-route-id="@item.singleBlockRequest.RequestId">Unblock</a>
                </td>
            </tr>
        }
    }

</table>