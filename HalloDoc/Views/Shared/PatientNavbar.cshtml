@model HalloDoc.DataLayer.ViewModels.AdminNavbarModel

<style>
    .moon-flex {
        display: flex;
        justify-content: flex-end;
        position: absolute;
        top: 7px;
        right: 15px;
    }

    .change-theme {
        border: none;
        background-color: transparent;
        margin-top: 4px;
        margin-right: 9px;
    }

    .change-theme-mobile-view {
        position: absolute;
        right: -20px;
        top: 13px;
        border: none;
        background-color: transparent;
    }

    .night-mode-icon {
        height: 40px;
        width: 40px;
        color: #00ccff;
        border: 2px solid #00ccff;
        border-radius: 10px;
        padding: 10px;
    }

    .hide-icon {
        display: none;
    }

    .hide {
        display: none;
    }

    .records:active {
        border-bottom: none !important;
        outline: none !important;
    }

    .offcanvas-body .active {
        border-bottom: 2px solid #54B4D3;
    }

    .active {
        color: #00CCFF !important;
        font-weight: bold !important;
        border-bottom: 2px solid #00CCFF !important;
    }

    .mobile-active {
        background-color: #E5F8FD !important;
    }

    .sidebar {
        height: 50px !important;
    }

    .dropdown-toggle:focus {
        outline: none !important;
    }

    .dropdown-menu:focus {
        outline: none !important;
    }

    .dropdown-item-active {
        background: #E5F9FF;
        font-weight: 600;
        color: #3fa8a9 !important;
    }
</style>

<nav class="d-flex justify-content-between Nav border-bottom border-dark-subtle w-100 sticky-top bg-light">
    <button class="navbar-toggler d-flex d-md-none" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
        <i class="bi bi-layout-sidebar mt-4 ms-3" style="height: 20px; width: 20px;"></i>
    </button>
    <div class="d-flex gap-1 align-items-center">

        <img src="~/images/logo1.png" class="Image ps-1 pt-1 ms-5 d-none d-sm-flex" alt="Patient"
             style="height: 80px;" />
        <div>
            <img src="~/images/logo1.png" class="d-sm-none d-flex align-items-center" alt="Patient"
                 style="height: 80px;" />

        </div>
    </div>
    <div class="d-flex align-items-center gap-1 flex-wrap">
        <p class="fw-light p-0 text-muted fw-semibold me-4 d-none d-sm-inline-block"
           style="margin-top: 20px !important;">
            Welcome <strong> @Model.Admin_Name</strong>

        </p>
        <a class="btn btn-outline-info d-none d-sm-flex mt-1" asp-controller="Login" asp-action="PatientLoginPage"
           style="margin-right:100px;">Logout</a>
        <a class="btn btn-outline-info d-inline-block d-sm-none logout-icon" asp-controller="Login"
           asp-action="PatientLoginPage">
            <i class="bi bi-box-arrow-right"></i>
        </a>
        <div class="moon-flex d-none d-sm-flex">
            <button onclick="changeTheme()" class="change-theme">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor"
                     class="bi bi-moon night-mode-icon" viewBox="0 0 16 16">
                    <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
                </svg>
            </button>
            <button onclick="changeTheme()" class="change-theme hide-icon">

                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor"
                     class="bi bi-brightness-high night-mode-icon" viewBox="0 0 16 16">
                    <path d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6m0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708" />
                </svg>
            </button>
        </div>
        <div class="moon-flex d-sm-none d-flex flex-shrink-1 flex-sm-shrink-0">
            <button onclick="changeTheme()" class="change-theme-mobile-view">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-moon night-mode-icon-mobile" viewBox="0 0 16 16">
                    <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
                </svg>
            </button>
            <button onclick="changeTheme()" class="change-theme-mobile-view hide-icon">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-brightness-high night-mode-icon-mobile" viewBox="0 0 16 16">
                    <path d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6m0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708" />
                </svg>
            </button>
        </div>
    </div>


</nav>

<nav class="shadow collpase d-none d-md-flex navbar-div" id="collapseExample">
    <div class="nav container-fluid ms-5" id="nav-tab" role="tablist">
        @if (Model.Tab == 21)
        {
            <a class="nav-link active text-muted ps-3 ms-3 dashboard" id="nav-home-tab" asp-action="PatientDashboardAndMedicalHistory" asp-controller="Login">Dashboard</a>
        }
        else
        {
            <a class="nav-link text-muted ps-3 ms-4 dashboard" id="nav-home-tab" asp-action="PatientDashboardAndMedicalHistory" asp-controller="Login">Dashboard</a>
        }

        @if (Model.Tab == 22)
        {
            <a class="nav-link active text-muted ps-3 ms-3 dashboard" id="nav-home-tab" asp-action="PatientProfile" asp-controller="Login">Profile</a>
        }
        else
        {
            <a class="nav-link text-muted ps-3 ms-3 dashboard" id="nav-home-tab" asp-action="PatientProfile" asp-controller="Login">Profile</a>
        }
    </div>
</nav>

<div class="offcanvas offcanvas-start w-50" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body">
        <p class="fw-light p-0 text-muted fw-semibold me-4 d-none d-sm-inline-block ps-4 h5 mb-3"
           style="margin-top: 20px !important;">Welcome <strong> @Model.Admin_Name</strong></p>
        @if (Model.Tab == 21)
        {
            <a class="nav-link sidebar mobile-active text-dark mb-2 ps-4 py-3" id="nav-home-tab" asp-action="PatientDashboardAndMedicalHistory" asp-controller="Login">
                <span class="h5">Dashboard</span>
            </a>
        }
        else
        {
            <a class="nav-link sidebar text-dark mb-2 ps-4 py-3" id="nav-home-tab" asp-action="PatientDashboardAndMedicalHistory" asp-controller="Login">
                <span class="h5">Dashboard</span>
            </a>
        }

        @if(Model.Tab == 22)
        {
            <a class="nav-link sidebar mobile-active text-dark mb-2 ps-4 py-3" id="nav-home-tab" asp-controller="Admin" asp-action="AdminDashboard" asp-action="PatientProfile" asp-controller="Login">
                <span class="h5">Profile</span>
            </a>
        }
        else
        {
            <a class="nav-link sidebar text-dark mb-2 ps-4 py-3" id="nav-home-tab" asp-action="PatientProfile" asp-controller="Login">
                <span class="h5">Profile</span>
            </a>
        }
    </div>
</div>